<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--验证码按钮-->
    <declare-styleable name="VerifyCodeButton">
        <!--默认 Button 背景-->
        <attr name="android:background"/>
        <!--点击获取验证码后 Button 背景-->
        <attr name="vcb_clickAfterBackground" format="reference"/>
        <!--倒计时时间，单位为秒-->
        <attr name="vcb_countdownTime" format="integer"/>
        <!--倒计时后的提示文字，如：重新获取-->
        <attr name="vcb_afterCountdownText" format="string"/>
    </declare-styleable>

    <!--通用 Item-->
    <declare-styleable name="CommonItemLayout">
        <attr name="cil_leftText" format="string"/>
        <attr name="cil_leftImage" format="reference"/>
        <attr name="cil_leftTextColor" format="color"/>
        <attr name="cil_rightText" format="string"/>
        <attr name="cil_rightTextColor" format="color"/>
        <attr name="cil_rightImage" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ZProgressBar">
        <!--背景颜色-->
        <attr name="zpb_backgroundColor" format="color"/>
        <!--进度条颜色-->
        <attr name="zpb_progressColor" format="color"/>
        <!--背景弧度-->
        <attr name="zpb_radius" format="dimension"/>
        <!--动画时长-->
        <attr name="zpb_duration" format="integer"/>
    </declare-styleable>

    <declare-styleable name="MutiProgress">
        <attr name="nodesNum" format="integer"/> <!-- 节点数量 -->
        <attr name="nodeRadius" format="dimension"/>
        <attr name="progressingDrawable" format="reference"></attr>
        <attr name="unprogressingDrawable" format="reference" />  <!-- 未完成的节点图标 -->
        <attr name="progresFailDrawable" format="reference" />
        <attr name="progresSuccDrawable" format="reference" />

        <attr name="processingLineColor" format="color"></attr>
        <attr name="currNodeNO" format="integer"></attr>   <!-- 当前所到达的节点编号  0开始计算-->
        <attr name="currNodeState" format="integer"></attr>   <!-- 当前所到达的节点状态，0：失败  1：成功 -->
    </declare-styleable>
</resources>