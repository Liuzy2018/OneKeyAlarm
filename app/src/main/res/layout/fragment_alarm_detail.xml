<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.AlarmDetail.AlarmDetailFragment"
    android:id="@+id/f1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:text="温馨提示：您的信息时警方侦破案件的关键，请确保信息的真实有效"
            android:textColor="#ff0000" />
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#686868" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="right"
                android:text="@string/receive_man"/>
            <EditText
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:id="@+id/edit_receive" />
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/add"
                android:id="@+id/btn_add_receive"/>
        </LinearLayout>
        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#686868" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:gravity="right"
                android:text="案发地" />

            <EditText
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:id="@+id/edit_venue_detail"
                android:layout_weight="10" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:id="@+id/btn_location_detail"
                android:background="@drawable/locate" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#686868" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="警情" />


        <cugxg.com.onekeyalarm.layout.ToggleGridRadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:id="@+id/ToggleGridRadioGroup_caseType"
            android:columnCount="3"
            android:rowCount="2">

            <ToggleButton
                android:layout_width="@dimen/togglebtn_width"
                android:layout_height="@dimen/togglebtn_height"
                android:background="@drawable/selctor_btn"
                android:layout_margin="3dp"
                android:textOn="@null"
                android:textOff="@null"
                android:text="乘坐黑车" />

            <ToggleButton
                android:layout_width="@dimen/togglebtn_width"
                android:layout_height="@dimen/togglebtn_height"
                android:background="@drawable/selctor_btn"
                android:layout_margin="3dp"

                android:textOn="@null"
                android:textOff="@null"
                android:text="非法囚禁" />

            <ToggleButton
                android:layout_width="@dimen/togglebtn_width"
                android:layout_height="@dimen/togglebtn_height"
                android:background="@drawable/selctor_btn"
                android:layout_margin="3dp"
                android:textOn="@null"
                android:textOff="@null"
                android:text="非法交易" />

            <ToggleButton
                android:layout_width="@dimen/togglebtn_width"
                android:layout_height="@dimen/togglebtn_height"
                android:background="@drawable/selctor_btn"
                android:layout_margin="3dp"

                android:textOn="@null"
                android:textOff="@null"
                android:text="拦路抢劫" />

            <ToggleButton
                android:layout_width="@dimen/togglebtn_width"
                android:layout_height="@dimen/togglebtn_height"
                android:background="@drawable/selctor_btn"
                android:layout_margin="3dp"

                android:textOn="@null"
                android:textOff="@null"
                android:text="聚众赌博" />

            <ToggleButton
                android:layout_width="@dimen/togglebtn_width"
                android:layout_height="@dimen/togglebtn_height"
                android:background="@drawable/selctor_btn"
                android:layout_margin="3dp"
                android:textOn="@null"
                android:textOff="@null"
                android:text="其他" />
        </cugxg.com.onekeyalarm.layout.ToggleGridRadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#686868" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:text="详细描述" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp"
            android:id="@+id/edit_describe_detail"
            android:ems="5"
            android:inputType="textMultiLine"
            android:minLines="5"
            android:background="@drawable/edit_bg"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginTop="5dp"
            android:background="#686868" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="语音报警"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/yvyin"

                android:id="@+id/btn_audio"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:text="拍照报警"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:id="@+id/btn_photo"
                android:background="@drawable/photo"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/soundfile_layout"
            android:orientation="vertical">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/photofile_layout">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"
                android:text="是否方便接听电话"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radiogroup_isEnableToPhone"
                android:checkedButton="@id/radiogroup_no"
                android:orientation="horizontal">

            <RadioButton

                android:text="是"
                android:layout_height="wrap_content"
                android:id="@+id/radiogroup_yes"
                android:layout_width="wrap_content"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radiogroup_no"
                android:text="否"/>
            </RadioGroup>

        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#feff0000"
            android:background="#0000ff"
            android:id="@+id/btn_alarm_detail"
            android:text="一键报警"/>
    </LinearLayout>

</ScrollView >